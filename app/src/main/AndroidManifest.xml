<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.betelguese.klassify" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".activities.StartUpActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.LogInActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.Home"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|adjustResize" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.betelguese.shoppingapploginscreen.activities.ProductListActivity" />


        </activity>
        <activity
            android:name=".activities.ProductListActivity"
            android:exported="false"
            android:label="@string/title_activity_product_list"
            android:parentActivityName=".activities.Home"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.betelguese.shoppingapploginscreen.activities.ProductListActivity" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.betelguese.klassify.activities.Home" />
        </activity>
        <activity
            android:name=".activities.ProductDetailsActivity"
            android:theme="@style/ProductDetailsTheme"
            android:label="@string/title_activity_product_details" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
