<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.betelguese.klassify">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.send_sms" />

    <application
        android:name=".appdata.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.StartUpActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.LogInActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.Home"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|adjustResize">
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.betelguese.klassify.activities.ProductListActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CategoryHome"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|adjustResize">
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.betelguese.klassify.activities.ProductListActivity" />
        </activity>
        <activity
            android:name=".activities.ProductListActivity"
            android:exported="false"
            android:label="@string/title_activity_product_list"
            android:parentActivityName=".activities.Home"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.betelguese.klassify.activities.ProductListActivity" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.betelguese.klassify.activities.Home" />
        </activity>
        <activity
            android:name=".activities.ProductDetailsActivity"
            android:label="@string/title_activity_product_details"
            android:theme="@style/ProductDetailsTheme" />
        <activity
            android:name=".activities.ImageSliderActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_image_slider"
            android:theme="@style/MyFullscreenTheme" />
        <activity
            android:name=".activities.AndroidDownloadManagerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_image_slider"
            android:theme="@style/MyFullscreenTheme" />


	
        <activity
            android:name=".activities.ProductAdvertActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/ProductDetailsTheme" />

	activity android:name="com.betelguese.klassify.activities.util.CustomGalleryActivity" >
            <intent-filter>
                <action android:name="luminous.ACTION_MULTIPLE_PICK" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
