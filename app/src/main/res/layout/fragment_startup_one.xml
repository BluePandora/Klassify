<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/shopping_image_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/shopping_1" />

    <com.widget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#88ffffff"
        android:padding="5dp"
        android:text="WELCOME!"
        android:textColor="#ff0097a7"
        android:textSize="40sp"
        app:font="RobotoCondensed-Bold.ttf" />

    <com.widget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="#88ffffff"
        app:font="RobotoCondensed-Light.ttf"
        android:padding="5dp"
        android:text="Swipe Left to Continue the tour"
        android:textColor="#ff0097a7"
        android:textSize="20sp" />
</RelativeLayout>