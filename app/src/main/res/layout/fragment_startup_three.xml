<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/shopping_image_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/shopping_3" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5500bbd2"
        android:orientation="vertical">

        <com.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Shopper's Cart"
            android:textColor="#FAFAFA"
            android:textSize="40sp"
            app:font="RobotoCondensed-Bold.ttf" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <com.widget.CustomButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="0.5dip"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/blue_holo_button"
                android:elevation="0dp"
                android:padding="10dip"
                android:text="LOG IN"
                android:textColor="#FAFAFA"
                android:textSize="20sp"
                app:font="RobotoCondensed-Light.ttf" />

            <com.widget.CustomButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="0.5dip"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/green_holo_button"
                android:elevation="0dp"
                android:padding="10dip"
                android:text="SIGN UP"
                android:textColor="#1A1A1A"
                android:textSize="20sp"
                app:font="RobotoCondensed-Light.ttf" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>